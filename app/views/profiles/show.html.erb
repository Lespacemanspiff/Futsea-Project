<h1>Profile Show</h1>

<p><%= @profile.name.capitalize %> likes to play <%= @profile.position %></p>
<%= link_to "Edit Profile", edit_profile_path(current_user), :class => "btn btn-primary"  %>

<h1><%= @profile.name.capitalize.pluralize %> Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>City</th>
      <th>Game Type</th>
    </tr>
  </thead>
  <tbody>
    <% @profile.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.event.date %></td>
        <td><%= reservation.event.time.strftime("%I:%M") %></td>
        <td><%= reservation.event.location.name %></td>
        <td><%= reservation.event.location.city %></td>
        <td><%= reservation.event.field.game_type.to_s+" v "+reservation.event.field.game_type.to_s  %></td>
      </tr>
    <% end %>
  </tbody>
</table>